#include <iostream>
#include <cmath>

using namespace std;

int main() {
    // Declaração da variável para armazenar o raio da circunferência
    float raio;

    // Solicitar ao usuário que insira o valor do raio da circunferência
    cout << "Digite o valor do raio da circunferencia: ";
    cin >> raio;

    // Calcular o diâmetro da circunferência (2 * raio)
    float diametro = 2 * raio;

    // Calcular o comprimento da circunferência (2 * pi * raio)
    float comprimento = 2 * M_PI * raio;

    // Calcular a área da circunferência (pi * raio * raio)
    float area = M_PI * pow(raio, 2);

    // Exibir o resultado
    cout << "Diametro da circunferencia: " << diametro << endl;
    cout << "Comprimento da circunferencia: " << comprimento << endl;
    cout << "Area da circunferencia: " << area << endl;

    return 0;
}
